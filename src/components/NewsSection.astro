---
export interface NewsArticle {
  date: string;
  title: string;
  excerpt: string;
  link: string;
}

export interface NewsProps {
  title: string;
  subtitle: string;
  articles: NewsArticle[];
}

const { title, subtitle, articles } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-heading font-bold text-gray-900 mb-4">{title}</h2>
      <p class="text-lg text-gray-600">{subtitle}</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {articles.map((article: NewsArticle) => (
        <article class="bg-white border border-gray-200 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200">
          <div class="p-6">
            <div class="text-sm text-accent-600 font-semibold mb-2">{article.date}</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{article.title}</h3>
            <p class="text-gray-600 mb-4">{article.excerpt}</p>
            <a href={article.link} class="text-primary-600 hover:text-primary-700 font-semibold text-sm">
              Read more â†’
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
