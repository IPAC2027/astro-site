---
export interface ProgramTrack {
  title: string;
  description: string;
  icon: string;
  highlights: string[];
  link: string;
  color: 'primary' | 'accent' | 'blue' | 'green' | 'orange' | 'yellow';
}

export interface ProgramHighlightsProps {
  title: string;
  subtitle: string;
  tracks: ProgramTrack[];
}

const { title, subtitle, tracks } = Astro.props;

const getColorClasses = (color: string) => {
  switch (color) {
    case 'primary':
      return {
        bg: 'bg-primary-50 hover:bg-primary-100',
        border: 'border-primary-200',
        icon: 'bg-primary-500 text-white',
        title: 'text-primary-900',
        button: 'bg-primary-600 hover:bg-primary-700 text-white'
      };
    case 'accent':
      return {
        bg: 'bg-accent-50 hover:bg-accent-100',
        border: 'border-accent-200',
        icon: 'bg-accent-500 text-white',
        title: 'text-accent-900',
        button: 'bg-accent-600 hover:bg-accent-700 text-white'
      };
    case 'blue':
      return {
        bg: 'bg-blue-50 hover:bg-blue-100',
        border: 'border-blue-200',
        icon: 'bg-blue-500 text-white',
        title: 'text-blue-900',
        button: 'bg-blue-600 hover:bg-blue-700 text-white'
      };
    case 'green':
      return {
        bg: 'bg-green-50 hover:bg-green-100',
        border: 'border-green-200',
        icon: 'bg-green-500 text-white',
        title: 'text-green-900',
        button: 'bg-green-600 hover:bg-green-700 text-white'
      };
    case 'orange':
      return {
        bg: 'bg-orange-50 hover:bg-orange-100',
        border: 'border-orange-200',
        icon: 'bg-orange-500 text-white',
        title: 'text-orange-900',
        button: 'bg-orange-600 hover:bg-orange-700 text-white'
      };
    case 'yellow':
      return {
        bg: 'bg-yellow-50 hover:bg-yellow-100',
        border: 'border-yellow-200',
        icon: 'bg-yellow-500 text-white',
        title: 'text-yellow-900',
        button: 'bg-yellow-600 hover:bg-yellow-700 text-white'
      };
    default:
      return {
        bg: 'bg-gray-50 hover:bg-gray-100',
        border: 'border-gray-200',
        icon: 'bg-gray-500 text-white',
        title: 'text-gray-900',
        button: 'bg-gray-600 hover:bg-gray-700 text-white'
      };
  }
};
---

