---
import Layout from '../layouts/Layout.astro';
import ExhibitorsSection from '../components/ExhibitorsSection.astro';
---

<Layout title="Exhibitors & Sponsors - IPAC27">
  <main>
    <div class="bg-gradient-to-r from-primary-600 to-accent-600 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl font-bold text-white mb-6">
          Exhibitors & Sponsors
        </h1>
        <p class="text-xl text-white/90 max-w-3xl mx-auto mb-8">
          Meet our valued partners who support the advancement of particle accelerator science and technology
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/exhibitors/opportunities" 
             class="bg-white text-primary-600 hover:bg-primary-100 dark:hover:bg-primary-700 px-8 py-4 rounded-lg font-semibold transition-colors duration-200 inline-flex items-center justify-center">
            Become a Sponsor
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5-5 5M6 12h12"></path>
            </svg>
          </a>
          <a href="/exhibitors/exhibition-registration" 
             class="border-2 border-white text-white hover:bg-white hover:text-primary-600 px-8 py-4 rounded-lg font-semibold transition-colors duration-200 inline-flex items-center justify-center">
            Exhibit at IPAC27
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <ExhibitorsSection />
  </main>
</Layout>
