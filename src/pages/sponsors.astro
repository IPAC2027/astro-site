---
import Layout from '../layouts/Layout.astro';
import ExhibitorsSection from '../components/ExhibitorsSection.astro';
---

<Layout title="Sponsors - IPAC27">
  <main>
    <div class="bg-gradient-to-r from-primary-600 to-accent-600 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl font-bold text-white mb-6">
          Our Sponsors
        </h1>
        <p class="text-xl text-white/90 max-w-3xl mx-auto">
          IPAC27 is made possible by the generous support of these outstanding organizations committed to advancing particle accelerator science
        </p>
      </div>
    </div>
    
    <ExhibitorsSection showSponsors={true} showExhibitors={false} />
    
    <!-- Sponsorship CTA -->
    <div class="bg-primary-50 dark:bg-primary-900 py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-primary-900 dark:text-primary-100 mb-6">
          Join Our Community of Sponsors
        </h2>
        <p class="text-lg text-primary-600 dark:text-primary-300 mb-8 max-w-2xl mx-auto">
          Partner with IPAC27 to showcase your organization to the global accelerator community and support the future of scientific discovery.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/exhibitors/opportunities" 
             class="bg-primary-600 text-white hover:bg-primary-700 px-8 py-4 rounded-lg font-semibold transition-colors duration-200 inline-flex items-center justify-center">
            View Sponsorship Packages
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5-5 5M6 12h12"></path>
            </svg>
          </a>
          <a href="/contact" 
             class="border-2 border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white px-8 py-4 rounded-lg font-semibold transition-colors duration-200 inline-flex items-center justify-center">
            Contact Sponsorship Team
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
